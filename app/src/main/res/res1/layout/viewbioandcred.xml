<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_bg"
    android:padding="20dp"
    android:layout_margin="20dp"

    android:gravity="center"
    android:clipToOutline="true">

    <!-- Top bar: Back arrow + Back text + Title centered -->
    <LinearLayout
        android:layout_width="331dp"
        android:layout_height="30dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_back_icon"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"

                android:src="@drawable/arrowback" />

            <TextView
                android:id="@+id/btn_back_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/Popreg"
                android:text="Back"
                android:textColor="#000000"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Spacer for adjustable gap -->
        <View
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <!-- Therapist Profile title -->
        <TextView
            android:id="@+id/tv_therapist_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="91dp"
            android:fontFamily="@font/Popbold"
            android:text="Therapist Profile"
            android:textColor="#1A1A1A"
            android:textSize="18sp" />
    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="1dp"
         />

    <!-- Profile Image -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/pprofile4"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="1dp"
        android:background="@drawable/circle_placeholdercolor"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        android:src="@drawable/"
        app:shapeAppearanceOverlay="@style/CircularImageView"
        app:strokeColor="#000000"
        />

    <!-- Therapist Name -->

    <!-- Profession -->
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginBottom="1dp"
        android:fontFamily="@font/Popbold"
        android:text="Lorem Ipsim"
        android:textColor="#000000"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/tv_profession"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Licensed Psychologist • CBT Specialist"
        android:fontFamily="@font/Popreg"
        android:textColor="#000000"
        android:textSize="12sp"
        android:layout_marginBottom="50dp" />

    <!-- My Approach heading -->
    <TextView
        android:id="@+id/tv_my_approach_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginBottom="6dp"
        android:fontFamily="@font/Popbold"
        android:text="My Approach"
        android:textColor="#000000"
        android:textSize="15sp" />

    <!-- My Approach body -->
    <TextView
        android:id="@+id/tv_my_approach"
        android:layout_width="wrap_content"
        android:layout_height="125dp"
        android:layout_marginBottom="14dp"
        android:fontFamily="@font/Popreg"
        android:lineSpacingExtra="3dp"
        android:text="I integrate evidence-based CBT techniques with a warm, collaborative approach — focusing on building skills, insight, and resilience tailored to each client's needs."
        android:textColor="#000000"
        android:textSize="11sp" />

    <!-- Quote section -->


    <!-- Credentials & Experience heading -->
    <TextView
        android:id="@+id/tv_creds_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="Credentials & Experience"
        android:fontFamily="@font/Popbold"
        android:textColor="#000000"
        android:textSize="15sp"
        android:layout_marginBottom="1dp" />

    <!-- Education -->

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="20dp"
        android:layout_marginBottom="1dp">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/educicon"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/Popbold"
            android:text="Education"
            android:textColor="#1A1A1A"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ph.D. in Psychology – University of the Philippines"
            android:fontFamily="@font/Popreg"
            android:textColor="#000000"
            android:textSize="12sp"/>
    </LinearLayout>




    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="20dp"
        android:layout_marginBottom="8dp">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/licenicon"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="License"
            android:layout_gravity="left"
            android:fontFamily="@font/Popbold"
            android:textSize="13sp"
            android:textColor="#1A1A1A"
            android:layout_marginBottom="4dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registered Psychologist (RPsy) – PRC License No. 123456"
            android:fontFamily="@font/Popreg"
            android:textColor="#000000"
            android:textSize="12sp"/>
    </LinearLayout>

    <!-- Certifications -->


    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="20dp"
        android:layout_marginBottom="8dp">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/certicon"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Certifications"
            android:layout_gravity="left"
            android:fontFamily="@font/Popbold"
            android:textSize="13sp"
            android:textColor="#1A1A1A"
            android:layout_marginBottom="4dp" />
    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="10dp">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Certified Cognitive Behavioral Therapist (CCBT)"
            android:fontFamily="@font/Popreg"
            android:textColor="#000000"
            android:textSize="12sp"/>
    </LinearLayout>

</LinearLayout>