<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF7D6"
    tools:context=".AppointmentDashboard">

    <!-- Top Header Section -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="89dp"
        android:background="#FFF3B9">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="145dp"
            android:layout_height="87dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/__10" />


        <TextView
            android:id="@+id/textView2"
            android:layout_width="189dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="79dp"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="-2dp"
            android:layout_marginBottom="40dp"
            android:layout_toEndOf="@id/logo"
            android:fontFamily="@font/popsemibold"
            android:text="Lorem Ipsum"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="142dp"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="-38dp"
            android:layout_marginBottom="21dp"
            android:layout_toEndOf="@id/logo"
            android:fontFamily="@font/popreg"
            android:text="Patient"
            android:textColor="#000000"
            android:textSize="12sp" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/pprofile1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/circle_gray"
            android:scaleType="centerCrop"
            android:src="@drawable/catttt"
            app:shapeAppearanceOverlay="@style/CircularImageView"
            app:strokeColor="#000000"
            />



    </RelativeLayout>

    <!-- Illustration and tagline -->
    <!-- Illustration and tagline -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="721dp"
        android:background="@color/white"
        android:padding="16dp"
        android:scrollbarThumbVertical="@color/black">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Back Arrow + Title -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:clickable="true"
                    android:focusable="true"

                    android:padding="4dp"
                    android:src="@drawable/arrowback" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/popsemibold"
                    android:gravity="center"
                    android:text="Appointment Dashboard"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- 2 Boxes (Scheduled / Pending) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="8dp">

                <!-- Scheduled Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:cardUseCompatPadding="true"
                    app:strokeColor="#000000"
                    app:strokeWidth="1dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="12dp">

                        <!-- Title -->
                        <TextView
                            android:id="@+id/txtScheduledTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginBottom="4dp"
                            android:text="Scheduled"
                            android:textColor="#000000"
                            android:textSize="15sp" />

                        <!-- Number -->
                        <TextView
                            android:id="@+id/txtScheduledCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txtScheduledTitle"
                            android:layout_alignParentStart="true"
                            android:text="2"
                            android:textColor="#7A66FF"
                            android:textSize="18sp" />

                        <!-- Icon with circle background -->
                        <ImageView
                            android:id="@+id/scheduledIcon"
                            android:layout_width="65dp"
                            android:layout_height="66dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="87dp"
                            android:layout_marginTop="6dp"
                            android:layout_marginBottom="6dp"
                            android:padding="8dp"
                            android:src="@drawable/scheduled1" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <!-- Pending Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:cardUseCompatPadding="true"
                    app:strokeColor="#000000"
                    app:strokeWidth="1dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="12dp">

                        <!-- Title -->
                        <TextView
                            android:id="@+id/txtPendingTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginBottom="4dp"
                            android:text="Pending"
                            android:textColor="#000000"
                            android:textSize="15sp" />

                        <!-- Number -->
                        <TextView
                            android:id="@+id/txtPendingCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txtPendingTitle"
                            android:layout_alignParentStart="true"
                            android:text="1"
                            android:textColor="#FF9900"
                            android:textSize="18sp" />

                        <!-- Icon with circle background -->
                        <ImageView
                            android:id="@+id/pendingIcon"
                            android:layout_width="63dp"
                            android:layout_height="63dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="87dp"
                            android:layout_marginTop="6dp"
                            android:layout_marginBottom="6dp"
                            android:padding="8dp"
                            android:src="@drawable/pendingicon1" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>


            <!-- Filter Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnScheduled"
                    android:layout_width="11dp"
                    android:layout_height="24dp"
                    android:layout_margin="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/filter_selected"
                    android:paddingHorizontal="0dp"
                    android:paddingVertical="0.1dp"
                    android:text="Scheduled (0)"
                    android:textColor="#000000"
                    android:textSize="11sp" />

                <androidx.appcompat.widget.AppCompatButton

                    android:id="@+id/btnPending"
                    android:layout_width="11dp"
                    android:layout_height="24dp"
                    android:layout_margin="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/filter_unselected"
                    android:paddingHorizontal="0dp"
                    android:paddingVertical="0dp"
                    android:text="Pending (0)"
                    android:textColor="#000000"
                    android:textSize="13sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnReschedule"
                    android:layout_width="11dp"
                    android:layout_height="24dp"
                    android:layout_margin="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/filter_unselected"
                    android:paddingHorizontal="0dp"
                    android:paddingVertical="0.1dp"
                    android:text="Reschedule (0)"
                    android:textColor="#000000"
                    android:textSize="10sp" />

                <androidx.appcompat.widget.AppCompatButton

                    android:id="@+id/btnCancelled"
                    android:layout_width="11dp"
                    android:layout_height="24dp"
                    android:layout_margin="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/filter_unselected"
                    android:paddingHorizontal="0dp"
                    android:paddingVertical="0.1dp"
                    android:text="Cancelled (0)"
                    android:textColor="#000000"
                    android:textSize="11sp" />

            </LinearLayout>


            <!-- RecyclerView for Appointment List -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/appointmentList"
                android:layout_width="match_parent"
                android:layout_height="488dp"
                android:padding="12dp"
                android:paddingTop="12dp"
                android:paddingBottom="100dp" />
        </LinearLayout>
    </LinearLayout>


    <!-- Grid Buttons Section -->




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="#FFF7D6"
        android:paddingTop="6dp"
        android:paddingBottom="6dp">

        <!-- Container for the nav items -->
        <LinearLayout
            android:id="@+id/thefooterContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="4">

            <!-- Home -->
            <LinearLayout
                android:id="@+id/nav_home"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/theicon_home"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/navhomeon"
                    android:contentDescription="Home" />

                <TextView
                    android:id="@+id/text_home1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Home"
                    android:textSize="13sp"
                    android:textColor="#000000"
                    android:fontFamily="@font/popreg" />
            </LinearLayout>

            <!-- Appointments -->
            <LinearLayout
                android:id="@+id/nav_appointments"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/theicon_appointments"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/navappointoff"
                    android:contentDescription="Appointments" />

                <TextView
                    android:id="@+id/text_appointments1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Appointments"
                    android:textSize="12sp"
                    android:textColor="#000000"
                    android:fontFamily="@font/popreg" />
            </LinearLayout>

            <!-- Notifications -->

            <!-- Profile -->
            <LinearLayout
                android:id="@+id/nav_notifications"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/theicon_notifications"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:contentDescription="Notifications"
                    android:src="@drawable/navnotifoff" />

                <TextView
                    android:id="@+id/text_notifications1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/popreg"
                    android:text="Notifications"
                    android:textColor="#000000"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/nav_profile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/theicon_profile"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/navprofoff"
                    android:contentDescription="Profile" />

                <TextView
                    android:id="@+id/text_profile1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Profile"
                    android:textSize="13sp"
                    android:textColor="#000000"
                    android:fontFamily="@font/popreg" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>