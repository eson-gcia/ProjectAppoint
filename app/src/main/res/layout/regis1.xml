<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF7D1"
    tools:context=".regis1">

    <!-- Logo -->
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="303dp"
        android:layout_height="248dp"
        android:layout_marginTop="64dp"
        android:adjustViewBounds="true"
        android:padding="16dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/__10"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Input fields column -->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- First Name -->
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etfn"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/background_login"
            android:fontFamily="@font/popreg"
            android:hint="First Name"
            android:inputType="textPersonName"
            android:paddingStart="16dp"
            android:paddingEnd="18dp"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvfnError2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:fontFamily="@font/popreg"
                android:text="*First Name is missing"
                android:textColor="#FF0000"
                android:textSize="12sp"
                android:visibility="invisible" />
        </LinearLayout>

        <!-- Last Name -->
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etln"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@drawable/background_login"
            android:fontFamily="@font/popreg"
            android:hint="Last Name"
            android:inputType="textPersonName"
            android:paddingStart="16dp"
            android:paddingEnd="18dp"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvlnError22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/popreg"
                android:text="*Last Name is missing"
                android:textColor="#FF0000"
                android:textSize="12sp"
                android:visibility="invisible" />
        </LinearLayout>

        <!-- Email -->
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etmail"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@drawable/background_login"
            android:fontFamily="@font/popreg"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:paddingStart="16dp"
            android:paddingEnd="18dp"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvemaError3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/popreg"
                android:text="*Email is missing"
                android:textColor="#FF0000"
                android:textSize="12sp"
                android:visibility="invisible" />
        </LinearLayout>

    </LinearLayout>

    <!-- Bottom Buttons (fixed = NO BLACK BAR NOW) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"

        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.898">

        <!-- Horizontal row for the 2 buttons -->
        <LinearLayout
            android:layout_width="376dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fitsSystemWindows="true"
            android:gravity="start"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnLoginback"
                android:layout_width="143dp"
                android:layout_height="37dp"
                android:layout_marginEnd="149dp"
                android:background="@drawable/buttonradius"
                android:backgroundTint="#68382E"
                android:fontFamily="@font/popbold"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="BACK TO LOGIN"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btntonext"
                android:layout_width="77dp"
                android:layout_height="37dp"
                android:layout_marginStart="2dp"
                android:background="@drawable/buttonradius"
                android:backgroundTint="#68382E"
                android:fontFamily="@font/popbold"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="NEXT"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
