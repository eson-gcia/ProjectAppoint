<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF7D1"
    tools:context=".Changeinputsize"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="-104dp">

    <!-- Company logo -->

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="340dp"
        android:layout_height="364dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/__10"
        tools:layout_editor_absoluteY="16dp" />

    <View
        android:id="@+id/view"
        android:layout_width="300dp"
        android:layout_height="0.5dp"
        android:background="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="559dp" />


    <CheckBox
        android:id="@+id/checkBoxRememberMe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@drawable/checkbox_selector"
        android:buttonTintMode="multiply"
        app:buttonCompat="@drawable/checkbox_selector"
        app:buttonIcon="@drawable/checkbox_selector"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="559dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/Popreg"
        android:text="Remember Me"
        android:textColor="#1D1A1A"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.286"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="574dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonLogin"
        android:layout_width="227dp"
        android:layout_height="33dp"
        android:background="@drawable/buttonradius"
        android:fontFamily="@font/Popbold"
        android:gravity="center"
        android:text="LOGIN"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textSize="14dp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="615dp" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editTextPW"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/background_login"
        android:ems="10"
        android:fontFamily="@font/Popreg"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingStart="16dp"
        android:paddingEnd="18dp"
        android:singleLine="true"
        android:textColor="#000000"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="470dp" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editTextE"
        android:layout_width="300dp"
        android:fontFamily="@font/Popreg"
        android:layout_height="50dp"
        android:background="@drawable/background_login"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingStart="16dp"
        android:paddingEnd="18dp"
        android:singleLine="true"
        android:textColor="#000000"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="377dp" />

    <TextView
        android:id="@+id/textViewEError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*Password"
        android:fontFamily="@font/Popreg"
        android:textColor="#FF0000"
        android:textSize="12dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.609"
        tools:layout_editor_absoluteX="73dp"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/textViewRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/Popreg"
        android:text="Don't have an account?"
        android:textColor="#000000"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.393"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="655dp" />

    <TextView
        android:id="@+id/textViewRegisterQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:clickable="true"
        android:fontFamily="@font/Popreg"
        android:text="Register"
        android:textColor="#0000FF"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.689"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="655dp" />

    <TextView
        android:id="@+id/textViewPWError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*Password"
        android:textColor="#FF0000"
        android:fontFamily="@font/Popreg"
        android:textSize="12dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.738"
        tools:layout_editor_absoluteX="73dp"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/textViewForgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password"
        android:fontFamily="@font/Popreg"
        android:clickable="true"
        android:textColor="#0000FF"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.802"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="574dp" />




    <!-- password error message -->

    <!-- Line divider -->


    <!-- CheckBox for Remember Me -->
    <!-- Forgot password -->

    <!-- 6. Register Question -->

    <!-- 6. Register redirect -->
</androidx.constraintlayout.widget.ConstraintLayout>