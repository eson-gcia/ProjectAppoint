<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF7D6"
    tools:context=".PatientDashboard">

    <!-- Top Header Section -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="89dp"
        android:background="#FFF3B9">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="145dp"
            android:layout_height="87dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/__10" />


        <TextView
            android:id="@+id/textView2"
            android:layout_width="189dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="83dp"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="-6dp"
            android:layout_marginBottom="38dp"
            android:layout_toEndOf="@id/logo"
            android:fontFamily="@font/Popsemibold"
            android:text="Lorem Ipsum"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="74dp"
            android:layout_marginTop="47dp"
            android:layout_marginBottom="18dp"
            android:layout_toEndOf="@id/logo"
            android:fontFamily="@font/Popreg"
            android:text="Licensed Therapist"
            android:textColor="#000000"
            android:textSize="12sp" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/pprofile1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/circle_placeholdercolor"
            android:scaleType="centerCrop"
            android:src="@drawable/"
            app:shapeAppearanceOverlay="@style/CircularImageView"
            app:strokeColor="#000000"
            />



    </RelativeLayout>

    <!-- Illustration and tagline -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:padding="1dp">



        <!-- Your existing illustration -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/illustration"
            android:layout_width="243dp"
            android:layout_height="265dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="185dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="77dp"
            android:contentDescription="Illustration"
            android:scaleType="centerCrop"
            android:src="@drawable/background_image"
            app:shapeAppearanceOverlay="@style/RoundedImageStyle" />

        <!-- Your existing text -->
        <TextView
            android:id="@+id/text_description1"
            android:layout_width="185dp"
            android:layout_height="137dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="79dp"
            android:layout_marginEnd="212dp"
            android:layout_marginBottom="108dp"
            android:fontFamily="@font/Popreg"
            android:lineSpacingExtra="4dp"
            android:text="Every conversation matters. GlimmerMind bridges the gap between you and your clients, creating space for real connection and care."
            android:textColor="#000000"
            android:textSize="13sp" />



    </RelativeLayout>

    <!-- Grid Buttons Section -->



    <GridLayout
        android:layout_width="315dp"
        android:layout_height="235dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:alignmentMode="alignMargins"
        android:columnCount="2"
        android:rowCount="2"
        android:rowOrderPreserved="false"
        tools:layout_editor_absoluteX="70dp"
        tools:layout_editor_absoluteY="70dp">


        <!-- Manage Profile -->
        <LinearLayout
            android:id="@+id/btnManageProfile1"
            android:layout_width="131dp"
            android:layout_height="97dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/image_rounded"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/manpro2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:onClick="onImageClick"
                android:src="@drawable/profile"
                android:tint="#68382E" />

            <TextView
                android:layout_width="wrap_content"
                android:clickable="true"
                android:layout_height="wrap_content"
                android:fontFamily="@font/Popreg"
                android:text="Manage Profile"
                android:textColor="#000000"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Book Appointment -->
        <LinearLayout
            android:id="@+id/btnAvail"
            android:layout_width="131dp"
            android:layout_height="97dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/image_rounded"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:onClick="onImageClick"
                android:src="@drawable/appoint"
                android:layout_marginBottom="5dp"
                android:tint="#68382E" />

            <TextView
                android:layout_width="wrap_content"
                android:clickable="true"
                android:layout_height="wrap_content"
                android:fontFamily="@font/Popreg"
                android:text="Manage Availability"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Assessment Test -->
        <LinearLayout
            android:id="@+id/btnDash"
            android:layout_width="131dp"
            android:layout_height="97dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/image_rounded"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="44dp"
                android:onClick="onImageClick"
                android:src="@drawable/appoidashboard"
                android:tint="#68382E" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/Popreg"
                android:clickable="true"
                android:textAlignment="center"
                android:text="Appointment Dashboard"
                android:textColor="#000000"
                android:textSize="12sp"
                />
        </LinearLayout>

        <!-- About Us -->
        <LinearLayout
            android:id="@+id/btnAbout"
            android:layout_width="131dp"
            android:layout_height="97dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/image_rounded"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="50dp"
                android:onClick="onImageClick"
                android:layout_height="60dp"
                android:src="@drawable/note"
                android:tint="#68382E" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/Popreg"
                android:clickable="true"
                android:text="Patient Notes"
                android:textColor="#000000"
                android:textSize="14sp" />
        </LinearLayout>
    </GridLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="#FFF7D6"
        android:paddingTop="6dp"
        android:paddingBottom="6dp">

        <!-- Container for the nav items -->
        <LinearLayout
            android:id="@+id/thefooterContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="4">

            <!-- Home -->
            <LinearLayout
                android:id="@+id/nav_home"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/theicon_home"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/navhomeon"
                    android:contentDescription="Home" />

                <TextView
                    android:id="@+id/text_home1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Home"
                    android:textSize="13sp"
                    android:textColor="#000000"
                    android:fontFamily="@font/Popreg" />
            </LinearLayout>

            <!-- Appointments -->
            <LinearLayout
                android:id="@+id/nav_appointments"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/theicon_appointments"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/navappointoff"
                    android:contentDescription="Appointments" />

                <TextView
                    android:id="@+id/text_appointments1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Appointments"
                    android:textSize="13sp"
                    android:textColor="#000000"
                    android:fontFamily="@font/Popreg" />
            </LinearLayout>

            <!-- Notifications -->

            <!-- Profile -->
            <LinearLayout
                android:id="@+id/nav_notifications"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/theicon_notifications"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:contentDescription="Notifications"
                    android:src="@drawable/navnotifoff" />

                <TextView
                    android:id="@+id/text_notifications1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/Popreg"
                    android:text="Notifications"
                    android:textColor="#000000"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/nav_profile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/theicon_profile"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/navprofoff"
                    android:contentDescription="Profile" />

                <TextView
                    android:id="@+id/text_profile1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Profile"
                    android:textSize="13sp"
                    android:textColor="#000000"
                    android:fontFamily="@font/Popreg" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>