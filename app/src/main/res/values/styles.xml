<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomCheckboxTheme">
        <item name="colorControlNormal">@android:color/transparent</item>
        <item name="colorControlActivated">@android:color/transparent</item>
        <item name="android:buttonTint">@null</item>
    </style>

    <style name="DialogOverlay" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">#80000000</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="CircularImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="RoundedImageStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerFamilyTopRight">cut</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="TransparentDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item> <!-- 50% dark background -->
    </style>

    <style name="CalendarDateText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColorHighlight">@color/colorAccent</item>
        <item name="android:fontFamily">@font/popbold</item>
        <item name="android:textColor">@android:color/black</item><!-- makes date numbers bold -->
    </style>

    <style name="CalendarDateTextscale">
        <item name="android:textSize">6sp</item> <!-- Change to whatever size you want -->
        <item name="android:textColor">#000000</item>
    </style>



    <style name="CalendarWeekText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/black</item> <!-- keeps weekdays normal -->
    </style>


</resources>
